{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "ES2015",
            "ES5",
            "esnext",
            "dom.Iterable"
        ],
        "types": [
            "node"
        ],
        "allowSyntheticDefaultImports": true, // 允许从没有设置默认导出的模块中默认导入。
        "rootDir": ".",
        "typeRoots": [
            "node_modules/@types",
            "src/@types"
        ],
        // "allowJs": true,
        "jsx": "react",
        "strict": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "outDir": "src/dist",
        "declaration": true, 
        "declarationDir": "src/dist/types",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*",
    ],
    "compileOnSave": true
}